{
    "name": "michaelnabil230/laravel-multi-tenancy",
    "description": "Automatic multi-tenancy for your Laravel application.",
    "keywords": [
        "MichaelNabil230",
        "laravel",
        "laravel-multi-tenancy",
        "multi-tenancy",
        "tenancy",
        "subscriptions",
        "plan"
    ],
    "homepage": "https://github.com/michaelnabil230/laravel-multi-tenancy",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Nabil",
            "email": "michaelnabil926@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "facade/ignition-contracts": "^1.0",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0",
        "spatie/dns": "^2.5",
        "spatie/laravel-sluggable": "^3.4.2",
        "spatie/laravel-translatable": "^6.3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.6.0",
        "nunomaduro/collision": "^6.3.0",
        "nunomaduro/larastan": "^2.4.1",
        "orchestra/testbench": "^8.0.2",
        "pestphp/pest": "^1.22.4",
        "pestphp/pest-plugin-laravel": "^1.1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "MichaelNabil230\\MultiTenancy\\": "src",
            "MichaelNabil230\\MultiTenancy\\Database\\Factories\\": "database/factories"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MichaelNabil230\\MultiTenancy\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MichaelNabil230\\MultiTenancy\\MultiTenancyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}